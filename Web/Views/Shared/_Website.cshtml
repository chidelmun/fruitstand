@using Web.Code.Common
@using Web.Code.Common.Extensions
@{
	Layout = "~/views/shared/_Empty.cshtml";
}

@section BodyOpening
{
	@{ Html.RenderAction("APILogViewer", "Home"); }
}

@section MainMenu
{
	<div class="container container-full-width-header">
				<div class="main-header">
						
					<a href="/" class="logo">
							
					</a>

					<div class="nav main-nav">

						<ul class="menu">
							<li><a href="@Url.Action("BrowseProducts", "Home")">Browse products</a></li>
						</ul>	

						<ul class="menu sub-menu">
							<li>
								<a href="@Configuration.Current.SourceCodeUrl" class="icon details">Download the source code</a>
								<a href="@Configuration.Current.APIDocumentationUrl" class="icon details">API Documentation</a>
								<a class="icon toggle-developer-mode">Developer Console</a>
							</li>
						</ul>	
					</div>
				</div>
			</div>
}

@RenderBody();
	